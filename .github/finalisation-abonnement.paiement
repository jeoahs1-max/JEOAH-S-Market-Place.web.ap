    <script type="module">
        // Import des librairies Firebase
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, signInWithCustomToken, onAuthStateChanged, signOut } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, doc, updateDoc, setDoc } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";
        import { setLogLevel } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";

        // Variables globales Firebase
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
        const firebaseConfig = typeof __firebase_config !== 'undefined' ? JSON.parse(__firebase_config) : {};
        const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;
        
        let auth;
        let db;
        let currentUserId = null;
        let selectedPlan = null;
        let selectedMethod = null;

        // DonnÃ©es des plans (pour la dÃ©mo)
        const PLANS_DATA = {
            'mensuel': { id: 'mensuel', name: 'Mensuel', price: 19.99, duration: 'mois' },
            'trimestriel': { id: 'trimestriel', name: 'Trimestriel', price: 59.97, duration: '3 mois' },
            'semestriel': { id: 'semestriel', name: 'Semestriel', price: 119.94, duration: '6 mois' },
            'annuel': { id: 'annuel', name: 'Annuel', price: 250.00, duration: 'an' }
        };

        // --- Fonctions d'aide pour l'UI (Modal) ---
        function showCustomModal(title, content) {
            document.getElementById('modal-title').textContent = title;
            document.getElementById('modal-content').textContent = content;
            document.getElementById('custom-modal').classList.remove('hidden');
        }

        // --- Logique d'Authentification ---
        function updateAuthUI(user) {
            const authButton = document.getElementById('auth-button');
            const userStatus = document.getElementById('user-status');
            currentUserId = user ? user.uid : null;
            if (user && user.uid) {
                authButton.textContent = 'DÃ©connexion';
                authButton.onclick = async () => { await signOut(auth); showCustomModal("DÃ©connexion", "Vous avez Ã©tÃ© dÃ©connectÃ©."); };
                authButton.classList.replace('bg-jeoahs', 'bg-red-600');
                userStatus.textContent = `ConnectÃ©: ${user.uid.substring(0, 8)}...`;
            } else {
                authButton.textContent = 'Se connecter';
                authButton.onclick = () => { window.location.href = 'auth.html'; };
                authButton.classList.replace('bg-red-600', 'bg-jeoahs');
                userStatus.textContent = `Non connectÃ©.`;
            }
        }
        async function initAuth() {
            if (Object.keys(firebaseConfig).length === 0) { return updateAuthUI(null); }
            setLogLevel('Debug');
            const app = initializeApp(firebaseConfig);
            auth = getAuth(app);
            db = getFirestore(app);
            try {
                if (initialAuthToken) { await signInWithCustomToken(auth, initialAuthToken); } else { await signInAnonymously(auth); }
            } catch (error) { console.error("Erreur d'authentification initiale:", error); }
            onAuthStateChanged(auth, updateAuthUI);
        }

        // --- Logique de Paiement ---

        function renderOrderDetails(plan) {
            const detailsDiv = document.getElementById('order-details');
            const totalPriceSpan = document.getElementById('total-price');
            
            if (!plan) {
                detailsDiv.innerHTML = `
                    <div class="bg-red-100 p-4 rounded-lg text-red-800">
                        <i class="fas fa-exclamation-triangle mr-2"></i> Le plan sÃ©lectionnÃ© est invalide ou manquant. Retournez Ã  <a href="plans.html" class="font-bold underline">Plans & Tarifs</a>.
                    </div>
                `;
                totalPriceSpan.textContent = '$0.00';
                return;
            }

            detailsDiv.innerHTML = `
                <div class="flex justify-between text-gray-700 mb-2">
                    <span>Abonnement : ${plan.name}</span>
                    <span>$${plan.price.toFixed(2)}</span>
                </div>
                <div class="flex justify-between text-gray-700 mb-2">
                    <span>PÃ©riode : par ${plan.duration}</span>
                    <span>(Taxes incluses)</span>
                </div>
            `;
            totalPriceSpan.textContent = `$${plan.price.toFixed(2)}`;
            selectedPlan = plan;
        }

        function handlePaymentMethodSelection() {
            document.querySelectorAll('.payment-option').forEach(button => {
                button.addEventListener('click', function() {
                    // DÃ©sÃ©lectionner tous les autres
                    document.querySelectorAll('.payment-option').forEach(btn => btn.classList.remove('selected'));
                    
                    // SÃ©lectionner celui-ci
                    this.classList.add('selected');
                    selectedMethod = this.getAttribute('data-method');
                    
                    // Activer le bouton de confirmation
                    const confirmBtn = document.getElementById('confirm-payment-btn');
                    confirmBtn.disabled = false;
                    confirmBtn.textContent = `Confirmer et Payer $${selectedPlan.price.toFixed(2)} avec ${selectedMethod.toUpperCase()}`;
                    confirmBtn.classList.remove('bg-gray-400');
                    confirmBtn.classList.add('bg-blue-600', 'hover:bg-blue-700');
                });
            });
        }
        
        async function processPayment() {
            if (!selectedPlan || !selectedMethod) {
                return showCustomModal('Erreur', 'Veuillez sÃ©lectionner un plan et un moyen de paiement.');
            }
            if (!currentUserId) {
                 return showCustomModal('Authentification Requise', 'Veuillez vous connecter avant de finaliser le paiement. Redirection vers la page de connexion...');
                 // Simuler la redirection
                 setTimeout(() => window.location.href = 'auth.html', 2000);
            }

            const confirmBtn = document.getElementById('confirm-payment-btn');
            confirmBtn.disabled = true;
            confirmBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Traitement...';

            // Path: /artifacts/{appId}/users/{userId}/user_data/profile
            const profileDocRef = doc(db, `artifacts/${appId}/users/${currentUserId}/user_data/profile`);
            
            try {
                // CrÃ©er ou mettre Ã  jour le profil avec les donnÃ©es d'abonnement
                const updateData = {
                    subscriptionStatus: `${selectedPlan.name} Actif`,
                    subscriptionPlanId: selectedPlan.id,
                    subscriptionPrice: selectedPlan.price,
                    paymentMethod: selectedMethod,
                    subscriptionStartDate: new Date(),
                    lastUpdate: new Date()
                };

                await setDoc(profileDocRef, updateData, { merge: true });

                showCustomModal('Paiement RÃ©ussi !', `FÃ©licitations ! Votre abonnement au plan ${selectedPlan.name} a Ã©tÃ© activÃ© avec succÃ¨s via ${selectedMethod.toUpperCase()}. Vous pouvez maintenant profiter de toutes les fonctionnalitÃ©s.`);

                // Rediriger vers l'accueil aprÃ¨s un court dÃ©lai
                setTimeout(() => window.location.href = 'index.html', 3000);

            } catch (error) {
                console.error("Erreur lors de la finalisation de l'abonnement:", error);
                showCustomModal('Erreur Critique', "Une erreur est survenue lors de l'activation de l'abonnement. Veuillez rÃ©essayer ou contacter le support.");
            } finally {
                confirmBtn.disabled = false;
                confirmBtn.innerHTML = 'Confirmer et Payer';
            }
        }

        // Fonction principale de chargement
        function loadPage() {
            // 1. RÃ©cupÃ©rer le plan depuis l'URL
            const urlParams = new URLSearchParams(window.location.search);
            const planId = urlParams.get('plan');
            const plan = PLANS_DATA[planId];
            
            renderOrderDetails(plan);
            handlePaymentMethodSelection();
        }

        // DÃ©marrage de l'application
        document.addEventListener('DOMContentLoaded', () => {
            initAuth();
            loadPage();
        });

    </script>
